<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/accent_material_light"
    android:id="@+id/scrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.janina.deomo1.com.teacher.TeacherActivity"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রফেসর ডঃ মোঃ শরীফ উদ্দীন"
            android:textAlignment="center"
            android:id="@+id/shorif_sir"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:textColorHighlight="#ff7c011e"
            android:textColor="#ff5d0024"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রফেসর ডঃ মোঃ জাহিদুর রহমান"
            android:id="@+id/zahid_sir"
            android:textColor="#ff5d0024"
            android:background="#ff19a3d0"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রফেসর ডঃ মোঃ হানিফ আলী"
            android:id="@+id/hanif_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রফেসর ডঃ যুগল কৃষ্ণ দাস"
            android:id="@+id/jugul_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:background="#ff19a3d0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রফেসর ডঃ মোঃ ইমদাদ হোসেন"
            android:id="@+id/imdad_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="সহঃ অধ্যাপক ডঃ মোঃ হুমায়ুন কবির"
            android:id="@+id/hk_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:background="#ff19a3d0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="সহঃ অধ্যাপক ইসরাত জাহান"
            android:id="@+id/israt_mam"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="সহঃ অধ্যাপক মোস্তাফিজুর রহমান"
            android:id="@+id/choyn_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:background="#ff19a3d0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="সহঃ অধ্যাপক গোলাম মোয়াজ্জেম"
            android:id="@+id/gm_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="সহঃ অধ্যাপক লিটন জুট রোজারিও"
            android:id="@+id/liton_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:background="#ff19a3d0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রভাষক তাসনিয়া হাসেম"
            android:id="@+id/tori_mam"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রভাষক সঞ্জিত কুমার সাহা"
            android:id="@+id/sonjit_sir"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:background="#ff19a3d0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="প্রভাষক তানজিলা রহমান"
            android:id="@+id/tanjila_mam"
            android:textColor="#ff5d0024"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="মেইন মেনু"
        android:id="@+id/menuTeacher"
        android:layout_alignTop="@+id/nextTeacher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#ff19a3d0"
        android:textColor="#ff5d0024"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="পরবর্তী"
        android:id="@+id/nextTeacher"
        android:layout_gravity="right"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:textStyle="bold"
        android:layout_marginTop="53dp"
        android:background="#ff19a3d0"
        android:textColor="#ff5d0024"/>





</RelativeLayout>
    </ScrollView>